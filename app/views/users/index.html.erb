<h1>Users:</h1>

<% @users.each do |user| %>
  <p> User: <%= user.username %> </p>
  <p> Admin: <%= user.admin %> </p>
  <% if user.admin %>
    <%= link_to "Remove admin status", admin_user_path(user), method: :patch %>
  <% else %>
    <%= link_to "Make admin", admin_user_path(user), method: :patch %>
  <% end %>
<% end %>
