<h1>Users:</h1>

<% @users.each do |user| %>
<div class="users-list">
  <p> User: <%= user.username %> </p>
  <p> Admin: <%= user.admin %> </p>
  <% if user.admin %>
    <p> <%= link_to "Remove admin status", admin_user_path(user), method: :patch %> </p>
  <% else %>
    <p> <%= link_to "Make admin", admin_user_path(user), method: :patch %> </p>
  <% end %>
</div>
<% end %>
