<%= form_for (@item) do |f| %>
  <div class="field">
    <%= f.label :cat_number %><br>
    <%= f.text_field :cat_number %>
  </div>

  <div class="field">
    <%= f.label :product_name %><br>
    <%= f.text_field :product_name %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>

  <div class="field">
    <%= f.label :size %><br>
    <%= f.text_field :size %>
  </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :url, "URL" %><br>
    <%= f.text_field :url %>
  </div>

  <div class="actions">
    <%= f.submit "Update Item" %>
  </div>
<% end %>
